  <div class="title">
      <h1>Books</h1>
  </div>
  <div class="table">
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      </tr>
      <% end %>
    </table>
  </div>
  
  <div class="title">
    <h3>New Book</h3>
  </div>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <br><%= f.submit"Create Book" %></br>

<% end %>